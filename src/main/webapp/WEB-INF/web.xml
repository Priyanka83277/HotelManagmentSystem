<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>HotelManagment</display-name>
  <welcome-file-list>
    <welcome-file>Index.html</welcome-file>

  </welcome-file-list>
  
  
    <!-- 	Naming the servet  -->
	<servlet>
		<servlet-name>signup</servlet-name>
		<servlet-class>com.project.Signup</servlet-class>
	</servlet>
	
	<!-- 	Mapping the servet  -->
	<servlet-mapping>
		<servlet-name>signup</servlet-name>
		<url-pattern>/Signup</url-pattern>
	</servlet-mapping>
	
    <!-- 	Naming the servet  -->
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.project.Login</servlet-class>
	</servlet>
	
	<!-- 	Mapping the servet  -->
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>
	
	<!-- 	Naming the servet  -->
	<servlet>
		<servlet-name>HotelMenu</servlet-name>
		<servlet-class>com.project.HotelMenu</servlet-class>
	</servlet>
	
	<!-- 	Mapping the servet  -->
	<servlet-mapping>
		<servlet-name>HotelMenu</servlet-name>
		<url-pattern>/HotelMenu</url-pattern>
	</servlet-mapping>
</web-app>